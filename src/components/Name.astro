---
export interface Props {
	firstName: string;
	lastName: string;
	userHref: string;
}

const { firstName, lastName, userHref } = Astro.props;
---

<li class="link-cards">
	<a href={userHref}>
		<h2>
			{lastName}
			<span>&rarr;</span>
		</h2>
		<p>
			{firstName}
		</p>
	</a>
</li>
<style>
	.link-cards {
		list-style: none;
		display: flex;
		padding: 0.25rem;
		background-color: rgb(146, 14, 14);
		background-image: none;
		background-size: 400%;
		border-radius: 0.6rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 4px 6px -1px rgba(74, 34, 34, 0.1), 0 2px 4px -2px rgba(200, 6, 6, 0.1);
	}

	.link-cards > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1rem 1.3rem;
		border-radius: 0.35rem;
		color: #111;
		background-color: rgb(28, 19, 159);
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #272727;
	}
	.link-cards:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-cards:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent));
	}
</style>